<Window x:Class="TimezoneandWeather.Setting_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimezoneandWeather"
        mc:Ignorable="d"
        Title="Setting_Window" Height="400" Width="350">
    <Window.Resources>
        <Style TargetType="Grid">
            <Setter Property="Background"  Value="White"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black">
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock x:Name="GuideTxtBlck" Text="{Binding SettingGuide}" TextWrapping="Wrap" Margin="5 5 5 5"></TextBlock>
        <TextBlock Text="Pick country:" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Theme:" VerticalAlignment="Center" Margin="5 150 0 0"></TextBlock>
    </Grid>
</Window>
